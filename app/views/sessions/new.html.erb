<div class="form-container">

  <%= tag.div(flash[:alert], style: "color:red") if flash[:alert] %>
  <%= tag.div(flash[:notice], style: "color:green") if flash[:notice] %>

  <%= form_with url: session_path, method: :post, class: "login-form" do |form| %>
    <div class="form-field">
      <%= form.email_field :email_address, required: true, autofocus: true, autocomplete: "username", placeholder: "Entrez votre adresse mail", value: params[:email_address], class: "form-input" %>
    </div>

    <div class="form-field">
      <%= form.password_field :password, required: true, autocomplete: "current-password", placeholder: "Entrez votre mot de passe", maxlength: 72, class: "form-input" %>
    </div>

    <div class="form-submit">
      <%= form.submit "Connexion", class: "submit-button" %>
    </div>

    <div class="forgot-password">
      <%= link_to "Mot de passe oubliÃ©?", new_password_path, class: "forgot-password-link" %>
    </div>

  <% end %> 

</div>


  